<div class="comment-top">
    <h4>Bir Yorum Yazın</h4>
    <div class="comment-bottom">
        <form action="#" method="post">
            <input class="form-control" type="text" name="Name" placeholder="Adınız" required="">
            <input class="form-control" type="email" name="Email" placeholder="Mail adresiniz" required="">

            <input class="form-control" type="text" name="Subject" placeholder="Konu" required="">

            <textarea class="form-control" name="Message" placeholder="Yorumunuz..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Paylaş</button>
        </form>
    </div>
</div>
