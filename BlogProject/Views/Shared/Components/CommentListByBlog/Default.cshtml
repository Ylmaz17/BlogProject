@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    @if (Model.Count() == 0)
    {
        <h4>Bu yazıya ilk yorumu siz yapın</h4>
    }
    @if (Model.Count() != 0)
    {
        <h4>Yorumlar</h4>
    }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/BlogTheme/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>
    }
</div>
<div class="comment-top">
    @if (Model.Count() != 0)
    {
        <h4>Bir Yorum Yazın</h4>
    }

    <div class="comment-bottom">
        <form action=/Comment/PartialAddComment/ method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Adınız" required="">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Mail adresiniz" required="">

            <textarea class="form-control" name="CommentContent" placeholder="Yorumunuz..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Paylaş</button>
        </form>
    </div>
</div>